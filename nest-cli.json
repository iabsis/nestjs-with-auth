{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "i18n/**/*",
      "assets/**/*",
      {
        "include": "**/templates/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true
  }
}
